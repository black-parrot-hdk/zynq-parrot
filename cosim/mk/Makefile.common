DESIGN_XCELIUM_DIR   = $(DESIGN_DIR)/xcelium
DESIGN_ZYNQ_DIR      = $(DESIGN_DIR)/zynq

#############################
# Common variables
#############################
TOOL := $(shell basename $(CURDIR))

DEFINES   += $(call bsg_var_upper,$(TOOL))
DEFINES   += $(call bsg_var_upper,HOST_$(HOST))
ifeq ($(ZYNQ_PL_DEBUG),1)
DEFINES   += ZYNQ_PL_DEBUG
endif
ifeq ($(ZYNQ_PS_DEBUG),1)
DEFINES   += ZYNQ_PS_DEBUG
endif

VPACKAGES += $(BASEJUMP_STL_DIR)/bsg_tag/bsg_tag_pkg.sv
