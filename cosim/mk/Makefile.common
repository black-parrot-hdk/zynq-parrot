
DESIGN_DIR           = $(abspath $(CURDIR)/..)
DESIGN_VSRC_DIR      = $(DESIGN_DIR)/v
DESIGN_CSRC_DIR      = $(DESIGN_DIR)/src
DESIGN_INCLUDE_DIR   = $(DESIGN_DIR)/include
DESIGN_TCL_DIR       = $(DESIGN_DIR)/tcl
